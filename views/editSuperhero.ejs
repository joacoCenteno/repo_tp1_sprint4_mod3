<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Hero</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Outfit:wght@100..900&display=swap" rel="stylesheet">
    
</head>

<body class="flex flex-col justify-center">
        <form  action="http://localhost:3000/api/heroes/actualizar/<%= hero._id || hero.id %>?_method=PUT" method="post" class="flex flex-col py-10 w-100 m-auto">
            <h2 class="text-2xl text-center font-semibold text-green-800 ">Formulario de Edici√≥n Heroe</h2>
        
            <label for="nombreSuperHeroe" class="text-sm mt-5">Nombre del Supherheroe</label><br>
            <input type="text" id="nombreSuperHeroe" name="nombreSuperHeroe" value="<%= hero.nombreSuperHeroe %>" class="w-100 mt-1 border border-green-100 text-green-800"><br>
        <% errors.filter(e => e.path === 'nombreSuperHeroe').forEach(e=>{ %>
            <span class="text-xs text-red-400"><%= e.msg %></span> <br>
        <% }) %>

        <label for="nombreReal" class="text-sm mt-2">Nombre Real</label><br>
        <input type="text" id="nombreReal" name="nombreReal" value="<%= hero.nombreReal %>" class="w-100 mt-1 border border-green-100 text-green-800"><br>
        <% errors.filter(e => e.path === 'nombreReal').forEach(e=>{ %>
            <span class="text-xs text-red-400"><%= e.msg %></span> <br>
        <% }) %>

            <label for="edad" class="text-sm mt-2">Edad del Supherheroe</label><br>
        <input type="number" id="edad" name="edad" value="<%= hero.edad %>" class="w-100 mt-1 border border-green-100 text-green-800"><br>
        <% errors.filter(e => e.path === 'edad').forEach(e=>{ %>
            <span class="text-xs text-red-400"><%= e.msg %></span> <br>
        <% }) %>

            <label for="planetaOrigen" class="text-sm mt-2">Plantea Origen del Supherheroe</label><br>
        <input type="text"i id="planetaOrigen" name="planetaOrigen" value="<%= hero.planetaOrigen %>" class="w-100 mt-1 border border-green-100 text-green-800"><br>
        
        <label for="debilidad" class="text-sm mt-2">Debilidad del Supherheroe</label><br>
        <input type="text" id="debilidad" name="debilidad" value="<%= hero.debilidad %>" class="w-100 mt-1 border border-green-100 text-green-800"><br>
        
        <label for="poderes" class="text-sm mt-2">Poderes del Supherheroe (separados por -)</label><br>
        <input type="text" id="poderes" name="poderes" value="<%= Array.isArray(hero.poderes)  ? hero.poderes.join('-') : (hero.poderes || '') %>" class="w-100 mt-1 border border-green-100 text-green-800"> <br>
        <% errors.filter(e => e.path === 'poderes').forEach(e=>{ %>
            <span class="text-xs text-red-400"><%= e.msg %></span> <br>
        <% }) %>
        
        <label for="aliados" class="text-sm mt-2" >Aliados del Supherheroe (separados por -)</label><br>
        <input type="text" id="aliados" name="aliados" value="<%= Array.isArray(hero.aliados) ? hero.aliados.join('-') : (hero.aliados || '') %>" class="w-100 mt-1 border border-green-100 text-green-800"> <br>
        
        <label for="enemigos" class="text-sm mt-2">Enemigos del Supherheroe (separados por -)</label><br>
        <input type="text" id="enemigos" name="enemigos" value="<%= Array.isArray(hero.enemigos)  ? hero.enemigos.join('-') : (hero.enemigos || '') %>" class="w-100 mt-1 border border-green-100 text-green-800"> <br>
        
        <div class="flex justify-end items-center gap-5 mt-4">
            <a href="/api/heroes" class="text-white bg-blue-400 py-1 px-4 rounded-xs flex"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
            <path fill-rule="evenodd" d="M20.239 3.749a.75.75 0 0 0-.75.75V15H5.549l2.47-2.47a.75.75 0 0 0-1.06-1.06l-3.75 3.75a.75.75 0 0 0 0 1.06l3.75 3.75a.75.75 0 1 0 1.06-1.06L5.55 16.5h14.69a.75.75 0 0 0 .75-.75V4.5a.75.75 0 0 0-.75-.751Z" clip-rule="evenodd" />
            </svg>Retroceder</a>
            <button type="submit" class="text-white bg-green-400 py-1 px-4 rounded-xs cursor-pointer">Actualizar Heroe</button>    
        </div>

    </form>
</body>
<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</html>